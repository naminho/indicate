{
  "name": "react-native-indicate",
  "version": "1.0.0",
  "main": "src/index.js",
  "scripts": {
    "test": "jest --watchAll",
    "watch": "cpx 'src/**/*' app/node_modules/react-native-indicate/src --watch",
    "app": "babel-node create-app"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "extends": "@react-native-community"
  },
  "jest": {
    "preset": "react-native",
    "testPathIgnorePatterns": [
      "/app/"
    ],
    "moduleNameMapper": {
      "react-native-indicate": "<rootDir>/src"
    }
  },
  "files": [
    "src"
  ],
  "devDependencies": {
    "@babel/core": "^7.7.5",
    "@babel/node": "^7.7.4",
    "@babel/preset-env": "^7.7.6",
    "@react-native-community/eslint-config": "0.0.5",
    "babel-jest": "^24.9.0",
    "cpx": "^1.5.0",
    "jest": "^24.9.0",
    "metro-react-native-babel-preset": "^0.57.0",
    "react": "^16.12.0",
    "react-native": "^0.61.5",
    "react-test-renderer": "^16.12.0",
    "recursive-copy": "^2.0.10",
    "rimraf": "^3.0.0"
  },
  "dependencies": {
    "omit.js": "^1.0.2"
  }
}
